
<h2 class="col-md-4 mt-4 mb-4">Style 1</h2>
<div>
    @{
        var names =(List<products>) ViewData["product"];

        <div class="card-group" style="width: 30rem;">
            @foreach(var c in names)
            {
            <div class="card primary">
              
              <img class="img card-img-top p-2"  src ="~/img/@c.productImg" \/>
              <div class="card-body">
              <h3 class="card-title"><i>@c.productName</i></h3>
              <p class="card-text"> Price : @c.price</p>
              </div>
            </div>
            
               
            }
        </div>
    }

    </div>
<h2 class="col-md-4 mt-4 mb-4 ">Style 2</h2>

    <div class="container">
        <div class="row">
            @foreach(var c in names)
       {
            <div class="col-md-4">
                <div class="card-content">
                    <div class="card-img p-2">
                        <img src="~/img/@c.productImg" alt="">
                        <span><h4>Discount</h4></span>
                    </div>
                    <div class="card-desc">
                        <h3>@c.productName</h3>
                        <p>Price : @c.price</p>
                            <a href="#" class="btn-card">Details</a>   
                    </div>
                </div>
            </div>
           
          }
        </div>
    </div>
